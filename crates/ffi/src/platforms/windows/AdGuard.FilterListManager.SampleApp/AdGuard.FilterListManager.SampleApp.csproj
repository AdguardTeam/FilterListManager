<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>AdGuard.FilterListManager.SampleApp</RootNamespace>
    <Product>AdGuard Filter List Manager for Windows</Product>
    <AssemblyTitle>C# AdGuard FLM adapter sample app</AssemblyTitle>
    <ApplicationIcon>..\AdGuardFilterListManager.ico</ApplicationIcon>
    <Prefer32Bit>false</Prefer32Bit>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="AdGuard.Utils">
      <HintPath>..\libs\AdGuard.Utils.dll</HintPath>
    </Reference>
    <Reference Include="AdGuard.Utils.Base">
      <HintPath>..\libs\AdGuard.Utils.Base.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AdGuard.FilterListManager\AdGuard.FilterListManagerOpen.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="App.config" />
    <None Include="packages.config" />
    <Content Include="..\AdGuardFilterListManager.ico">
      <Link>AdGuardFilterListManager.ico</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>